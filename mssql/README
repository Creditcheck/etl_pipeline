# set credentials
source .env-dev

# start db (first run also runs mssql-init process)
docker compose --profile mssql up

# login 
docker exec -it mssql bash
/opt/mssql-tools18/bin/sqlcmd -U user -P 'password' -C

# query
1> SELECT name FROM sys.databases;
2> GO

use testdb;
go


# list users
SELECT name, type_desc, is_disabled
FROM sys.sql_logins;
GO

# update password
ALTER LOGIN [user] WITH PASSWORD = 'password';

# show tables
SELECT name
FROM sys.tables
ORDER BY name;
go



# remove volume
docker stop -t 0 mssql
docker volume rm etl_pipeline_mssql-data
