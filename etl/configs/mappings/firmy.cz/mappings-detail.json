{
  "mappings": [
    {
      "selector": "div.list.lcat ul li a",
      "extract": "text",
      "json_path": "categories",
      "all": true
    },
    {
      "selector": "a[data-dot='show-website']",
      "extract": "text",
      "json_path": "website"
    },
    {
      "selector": "a.fbSocial",
      "extract": "attr",
      "attr": "href",
      "json_path": "facebook_url"
    }, 
    {
      "selector": "a.inSocial",
      "extract": "attr",
      "attr": "href",
      "json_path": "instagram_url"
    },
    {
      "selector": "a.liSocial",
      "extract": "attr",
      "attr": "href",
      "json_path": "linkedin_url"
    },

    {
      "selector": "a.piSocial",
      "extract": "attr",
      "attr": "href",
      "json_path": "pinterest_url"
    },

    {
      "selector": "a.ttSocial",
      "extract": "attr",
      "attr": "href",
      "json_path": "tiktok_url"
    }, 
	{
      "selector": "a.twSocial",
      "extract": "attr",
      "attr": "href",
      "json_path": "twitter_url"
    },    
   	{
      "selector": "a.ytSocial",
      "extract": "attr",
      "attr": "href",
      "json_path": "youtube_url"
    }, 

 	{
      "selector": "span[id='data-box-id-value']",
      "extract": "text",
      "json_path": "datova_schranka"
    },
    {
      "selector": "h1.detailPrimaryTitle",
      "extract": "text",
      "json_path": "nazev_firmy"
    },
    {
      "selector": "div.detailBusinessInfo",
      "match": ".*?([0-9]+).*",
      "extract": "text",
      "json_path": "ico"
    },    
	{
      "selector": "span.addrValue",
      "extract": "text",
      "json_path": "adresa"
    },
	{
      "selector": "div.detailRating a span.rating mapy-review-badge-composed-new.mapyRatingBadge",
      "extract": "attr",
      "attr": "reviews",
      "json_path": "review_count"
    },
    {
      "selector": "div.detailRating a span.rating mapy-review-badge-composed-new.mapyRatingBadge",
      "extract": "attr",
      "attr": "rating",
      "json_path": "rating"
    },
	{
      "selector": "p[data-dot='description']",
      "extract": "text",
      "json_path": "description"
    },
 	{
      "selector": "a[data-dot='e-mail']",
      "extract": "text",
      "json_path": "email"
    },
    {
      "selector": "span[data-dot='origin-phone-number']",
      "extract": "text",
      "json_path": "mobile"
    }
  ]
}

