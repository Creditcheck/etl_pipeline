{
  "record_selector": "div.premiseList article",
  "mappings": [
    {
      "selector": "a.titleLinkOverlay",
      "extract": "attr",
      "attr": "href",
      "json_path": "href"
    },
    {
      "selector": "div.content span.rating mapy-review-badge-composed-new.mapyRatingBadge",
      "extract": "attr",
      "attr": "reviews",
      "json_path": "review_count"
    },
	{
      "selector": "div.content span.rating mapy-review-badge-composed-new.mapyRatingBadge",
      "extract": "attr",
      "attr": "rating",
      "json_path": "rating"
    },
    {
      "selector": "a h3",
      "extract": "text",
      "json_path": "company_name"
    },
    {
      "selector": "div.description",
      "extract": "text",
      "json_path": "description"
    },
    {
      "selector": "address",
      "extract": "text",
      "json_path": "address"
    }
  ]
}

